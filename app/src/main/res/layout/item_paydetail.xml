<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background" android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.01"
        android:orientation="vertical"
        android:background="@drawable/linearlayout_shape_background"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="百信学车支付凭证"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017-05-05 16:16:01"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
        >
            <TextView
                android:id="@+id/zhifu_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="支付明细:"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/gray"
            />
            <TextView
                android:id="@+id/pay_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥ 800.00"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/zhifu_txt"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/paystate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式:    账户余额"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/paydel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品详情： 百信学车 - C套餐"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
        />
        <TextView
            android:id="@+id/orider_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="交易单号:    1234567890"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
        />
    </LinearLayout>

</LinearLayout>