<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
>
    <include
        android:id="@+id/title"
        layout="@layout/title"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:background="@color/white">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                android:id="@+id/img_signup"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/img_signup"
                android:scaleType="centerCrop"
            />
            <TextView
                android:id="@+id/messageDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_signup"
                android:background="@color/white"
                android:padding="5dp"/>
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/messageDetail"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/username"/>
                <EditText
                    android:id="@+id/signUpName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/num_text"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout1"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/phone"/>
                <TextView
                    android:id="@+id/signUpPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/num_text"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="@color/gray"
                    android:layout_weight="1"
                    android:text="15210233318"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout2"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="10dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/idcard"/>
                <EditText
                    android:id="@+id/idCard"
                    android:background="@drawable/num_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入身份证号码"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:maxLength="18"
                    android:textColorHint="@color/gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout3"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:weightSum="1"
                android:padding="10dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tuijianren_img"/>
                <EditText
                    android:id="@+id/tuijianren"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/num_text"
                    android:hint="请填写推荐人（选填）"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/gray"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp"
                          android:padding="5dp"
                          android:background="#FFFFFF">
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:paddingLeft="20dp"
                          android:text="是否拥有摩托车证"
                          android:textSize="15sp"
                          android:layout_gravity="center"/>
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_weight="0.1"
                           android:layout_gravity="center"
                           android:src="@drawable/circle_selected_image"
                           android:id="@+id/img_icar_true"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.2"
                          android:layout_gravity="center"
                          android:text="是"
                          android:textSize="15sp"
                          android:id="@+id/txt_icar_true"
                />
                <ImageView android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:layout_gravity="center"
                           android:src="@drawable/check_background"
                           android:id="@+id/img_icar_false"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.2"
                          android:layout_gravity="center"
                          android:layout_marginLeft="8dp"
                          android:text="否"
                          android:textSize="15sp"
                          android:id="@+id/txt_icar_false"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp"
                          android:padding="5dp"
                          android:background="#FFFFFF">
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:paddingLeft="20dp"
                          android:text="请选择您的考试地点"
                          android:textSize="15sp"
                          android:layout_gravity="center"/>
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_weight="0.1"
                           android:layout_gravity="center"
                           android:src="@drawable/circle_selected_image"
                           android:id="@+id/img_test_hefei"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.2"
                          android:layout_gravity="center"
                          android:text="合肥"
                          android:textSize="15sp"
                          android:id="@+id/txt_test_hefei"
                />
                <ImageView android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:layout_gravity="center"
                           android:src="@drawable/check_background"
                           android:id="@+id/img_test_liuan"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.2"
                          android:layout_gravity="center"
                          android:layout_marginLeft="8dp"
                          android:text="六安"
                          android:textSize="15sp"
                          android:id="@+id/txt_test_liuan"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/zhifu_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="支付方式"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
            />
            <LinearLayout
                android:id="@+id/payMethod1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/zhifu_style"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0"
                    android:src="@drawable/pay"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/aipay_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/aipay_isCheck"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/check_background"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/payMethod1"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/payMethod2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/line"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/weixin_zhifu"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/weixin_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/weixin_isCheck"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/check_background"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/payMethod3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/payMethod2"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0"
                    android:src="@drawable/img_union"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="银行卡支付"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/uppay_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/uppay_isCheck"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/check_background"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/payMethod4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/payMethod3"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/fuwutiaokuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/isCheck"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/check_background"
                android:enabled="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我已阅读并同意《"
                android:textColor="@color/gray"
                android:textSize="15sp"
            />
            <TextView
                android:id="@+id/tiaokuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underline_text"
                android:textColor="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="》"
                android:textColor="@color/gray"
                android:textSize="12dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/fuwutiaokuan"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/coach_Price"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="总金额:￥3299"
                android:textColor="@color/redTheme"
                android:textSize="15sp"/>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/themeColor"
            />
            <TextView
                android:id="@+id/yiyouhui"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已优惠:￥0"
                android:textColor="@color/gray"
                android:textSize="13sp"/>
            <Button
                android:id="@+id/payInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/gray"
                android:gravity="center"
                android:text="确定支付"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
