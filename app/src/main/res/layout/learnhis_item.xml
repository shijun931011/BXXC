<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
             >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/learn_record_line"
                  android:orientation="vertical"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="5dp"
                  android:background="#FFFFFF">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="10dp">
            <TextView
                android:id="@+id/study_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="私教(科目三)"
            />
            <TextView
                android:id="@+id/commemt_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="已评论"
                android:paddingRight="8dp"
                android:textColor="@color/btn_blue"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.8"
                       android:src="@drawable/img_xueche_school"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.2"
                      android:text="校   区："
                      android:textColor="@color/gray"
                      android:gravity="left"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text="经开校区"
                      android:id="@+id/study_school"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="5dp"
        >
            <ImageView android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.8"
                       android:src="@drawable/img_xueche_coach"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.2"
                      android:text="教练员："
                      android:textColor="@color/gray"
                      android:gravity="left"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text="童海兵私教中心"
                      android:id="@+id/study_coach"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="5dp"
                      android:paddingBottom="8dp"
        >
            <ImageView android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.8"
                       android:src="@drawable/img_xueche_time"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.2"
                      android:text="时   间："
                      android:textColor="@color/gray"
                      android:gravity="left"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text="2017年08月03日 08:00-10:00"
                      android:id="@+id/study_time"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
