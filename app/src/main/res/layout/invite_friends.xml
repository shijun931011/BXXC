<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/title" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pai" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="邀请好友一起来学车"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="好友用您的邀请码成功报名,\n您就可以获得礼品哦！"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="您的邀请码为："
            android:padding="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/inviteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18133224378"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/background" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="分享到"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/background" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/img_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/share"
    >
        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/share_qq"
            android:gravity="center|bottom"
        />

        <ImageView
            android:id="@+id/img_wxCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/share_friendcricle"
            android:gravity="center_horizontal|bottom"
        />

        <ImageView
            android:id="@+id/img_weChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/share_weixin"
            android:gravity="center_horizontal|bottom"
        />

        <ImageView
            android:id="@+id/img_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/share_sina"
            android:gravity="center_horizontal|bottom"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:layout_below="@id/img_share"
        android:layout_marginTop="5dp"

    >
        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/wxCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="微信朋友圈" />

        <TextView
            android:id="@+id/weChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="微信好友" />

        <TextView
            android:id="@+id/sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="新浪微博" />
    </LinearLayout>



</RelativeLayout>
