<?xml version="1.0" encoding="utf-8"?>
<com.jgkj.bxxc.tools.RefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:isScrollContainer="false"
            android:orientation="vertical">
            <TextView
                android:id="@+id/un_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="您暂时尚未登录"
                android:visibility="gone"/>
            <!-- 头像栏 -->

            <LinearLayout
                android:id="@+id/sethead_id"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/headbackground"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.jgkj.bxxc.tools.RoundImageView
                    android:id="@+id/choose_headImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/head1"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/userNick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Empty Pages"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userInfo_textView_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/personal_info"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="35dp"
                    android:paddingTop="14dp"
                    android:text="个人信息"
                    android:textSize="20sp"
                />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/loginbackground"/>

                <TextView
                    android:id="@+id/myOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/my_wallet_img"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="35dp"
                    android:paddingTop="14dp"
                    android:text="我的钱包"
                    android:textSize="20sp"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:layout_marginTop="5dp"
                  android:background="@color/background"/>
            <!-- 学车进程 -->
            <TextView
                android:id="@+id/learnPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/drive_process"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="学车进程"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/learn_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/learning_records"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="学车记录"/>
            <View android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:layout_marginTop="5dp"
                  android:background="@color/background"/>

            <!-- 我的教练 -->
            <TextView
                android:id="@+id/myCoach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/jiaolian"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="我的教练"/>

            <View android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:layout_marginTop="5dp"
                  android:background="@color/background"/>
            <!-- 客服 -->

            <TextView
                android:id="@+id/customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/kefu"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="客服热线"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="50dp"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/myactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/activity"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="活动中心"/>

            <View android:layout_width="match_parent"
                  android:layout_height="0.1dp"
                  android:layout_marginTop="5dp"
                  android:background="@color/background"/>

            <TextView
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/setting_image"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="设置"/>

        </LinearLayout>
    </ScrollView>
</com.jgkj.bxxc.tools.RefreshLayout>