<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:focusable="true" />
        <View android:layout_width="match_parent"
              android:layout_height="0.1dp"
              android:background="@color/background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ordertest"
                    android:layout_width="68dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/license_text1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="顺序练习" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="100dp"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/suijiTest"
                    android:layout_width="68dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/license_text1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="随机练习" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearlayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/monitest"
                    android:layout_width="68dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/license_text1"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="模拟考试" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="100dp"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/linearlayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cuotiTest"
                    android:layout_width="68dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/license_text1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="我的题库" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightwhite"
            android:hint="专项知识"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/visual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/visual1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="视觉测试图" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right"
                android:hint="红灯停，绿灯行"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="50dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/traffic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/traffic1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="交通标志图" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right"
                android:hint="经典易错标志一目了然"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="50dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/gestures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gestures1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="交警手势图" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right"
                android:hint="有交警看手势"
                android:paddingBottom="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/background"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</ScrollView>