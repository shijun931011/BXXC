<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              >
    <include
        android:id="@+id/layout"
        layout="@layout/title"/>
   <LinearLayout
       android:id="@+id/linearlayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/layout"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="84dp"
           android:layout_height="45dp"
           android:src="@drawable/balance_image"
           android:layout_marginTop="10dp"
       />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="余额："
           android:textSize="20dp"
           android:layout_gravity="center_vertical"
       />
   </LinearLayout>

    <TextView
        android:id="@+id/balance_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout"
        android:text="￥ 0"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:gravity="center"
    />
    <Button
        android:id="@+id/balance_explain"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:textColor="@color/gray"
        android:text="余额说明"
        android:background="@drawable/btn_shape"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/balance_money"
    />
    <Button
        android:id="@+id/recharge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/balance_explain"
        android:text="充   值"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/tv_bg_pay"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
    />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/recharge"
        android:background="@color/background"/>
    <LinearLayout
        android:id="@+id/re_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/re_hour_image"
            android:layout_marginLeft="8dp"
        />
        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="剩余学时"
            android:layout_marginLeft="10dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"/>

    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/re_hour"
        android:background="@color/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_detail"
        android:layout_marginTop="10dp"
        android:layout_below="@id/view1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/pay_mingxi_img"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="支付明细"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/pay_detail"
        android:background="@color/background"/>
    <LinearLayout
        android:id="@+id/mycoupod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mycoupon"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/my_coupon_image"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"/>
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/mycoupod"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/balance_deal"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="@string/balance_deal"
            android:textColor="@color/gray"
        />
        <TextView
            android:id="@+id/refund_record"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="@string/refund_record"
            android:textColor="@color/gray"
            android:layout_marginStart="25dp"
            />
    </LinearLayout>
</RelativeLayout>


