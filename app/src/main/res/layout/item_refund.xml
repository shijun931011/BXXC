<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:weightSum="1"
            android:id="@+id/linearLayout1">
            <TextView
                android:id="@+id/refund_name"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:text="C套餐退款"
                android:textSize="15dp"
            />
            <TextView
                android:id="@+id/refund_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-12 11:47:56"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/linearLayout1"

        >
            <TextView
                android:id="@+id/refund_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1000"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="20dp"

            />
        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp">
            <TextView
                android:id="@+id/refund_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="退款中"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="15dp"
            />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/background"
        android:layout_marginLeft="12dp"></View>
</LinearLayout>